<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.NumberCard">
        <div class="o_statistic">
            <div class="o_statistic_value" t-attf-class="text-{{props.color or 'primary'}}">
                <t t-esc="props.value"/>
            </div>
            <div class="o_statistic_label">
                <t t-esc="props.title"/>
            </div>
        </div>
    </t>

</templates>