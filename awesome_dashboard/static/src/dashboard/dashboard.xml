<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {}}" className="'h-100'">
            <t t-set-slot="control-panel-additional-actions">
                <button class="btn btn-secondary" t-on-click="openConfiguration" title="Configure Dashboard">
                    <i class="fa fa-cog"/> Settings
                </button>
                <button class="btn btn-primary" t-on-click="openCustomers">
                    Customers
                </button>
                <button class="btn btn-primary ms-2" t-on-click="openLeads">
                    Leads
                </button>
            </t>
            
            <div class="o_dashboard">
                <div class="o_dashboard_content">
                    <t t-foreach="items" t-as="item" t-key="item.id">
                        <DashboardItem size="item.size || 1">
                            <t t-set="itemProps" t-value="item.props ? item.props(statistics) : {data: statistics}"/>
                            <t t-component="item.Component" t-props="itemProps"/>
                        </DashboardItem>
                    </t>
                </div>
            </div>
        </Layout>
    </t>

</templates>